################################################################################
# Specify makeflags
################################################################################

.DEFAULT_GOAL = primary

MAKEFLAGS += -j

################################################################################
# Specify make tools and makeflags
################################################################################

CP      = cp
ZIP     = zip
ZIPINFO = zipinfo
MKDIR_P = mkdir -p $@

################################################################################
# Specify make targets
################################################################################

root = .
dir  := $(root)

TARGET_BINS :=
CLEAN_FILES :=
CLEAN_DIRS  :=

# ---------------------------------------------------------------------------- #

TARGET_BIN_$(dir) := $(dir)/r11922001_hw3.zip

$(TARGET_BIN_$(dir)): $(dir)/r11922001_code.ipynb $(dir)/r11922001_report.pdf
	@printf "  %-8s$@\n" "ZIP"
	$(Q)$(ZIP) $@ $^

TARGET_BINS += $(TARGET_BIN_$(dir))
CLEAN_FILES += $(TARGET_BIN_$(dir))

################################################################################
# Declare make targets
################################################################################

.PHONY: primary
primary: $(TARGET_BINS)
	$(Q)$(ZIPINFO) $(dir)/r11922001_hw3.zip

.PHONY: clean
clean:
	$(Q)rm -f $(CLEAN_FILES)
	$(Q)rm -rf $(CLEAN_DIRS)

.PHONY: distclean
distclean: clean
	$(Q)find . -name "*.[ado]" -exec rm -rf {} \;

.PHONY: help
help: ;

################################################################################
# Directory generic make targets
################################################################################

.SECONDARY: $(CLEAN_FILES)

################################################################################
# Make options
################################################################################

V ?= 0
ifeq ($(V),0)
    Q = @
else
    Q =
endif
